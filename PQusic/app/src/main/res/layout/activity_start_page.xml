<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc181e"
    tools:context="com.example.android.pqusic.StartPage">



    <TextView
        android:id="@+id/tvTextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="v1.0.0"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/tvTextTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTextOne"
        android:layout_centerInParent="true"
        android:text="@string/start_page_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFF" />


    <TextView
        android:id="@+id/tvTextThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTextTwo"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFF" />


    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/tvTextThree"
        android:layout_centerInParent="true"
        android:src="@drawable/youtube_ios_icon"/>




</RelativeLayout>

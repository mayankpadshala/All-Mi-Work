<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.forpracticeconcepts.MainActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->


    <TextView
        android:id="@+id/listview_and_adapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="#fac321"
        android:textStyle="bold"
        android:text="Simple Example Of ListView And Adapters"
        android:onClick="openListViewAndAdapters"/>

    <TextView
        android:id="@+id/custom_listview_and_adapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="#eac321"
        android:textStyle="bold"
        android:text="Example Of ListView And Custom Adapters"
        android:onClick="openCustomListViewAndAdapters"/>
</LinearLayout>
